{
  "name": "improrpg",
  "version": "0.0.6",
  "description": "improRPG is a live IMPROvisied multiplayer text based Role Play Game adventure story notebook sideapp",
  "homepage": "https://github.com/riskieee/improrpg#readme",
  "bugs": {
    "url": "https://github.com/riskieee/improrpg/issues"
  },
  "scripts": {
    "test": "jest --testEnvironment=node --verbose --forceExit --watchAll --maxWorkers=1",
    "test-coverage": " jest --collect-coverage --testEnvironment=node --forceExit --maxWorkers=1",
    "lint": "lint-staged",
    "lintit": "eslint .",
    "prepare": "cd .. && husky install backend/.husky",
    "debug": "nodemon bin/www DEBUG=improRPG:*",
    "dev": "nodemon bin/www",
    "start": "node bin/www"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "pretty-quick --staged",
      "eslint --fix"
    ],
    "*.+(json|css|md)": [
      "pretty-quick --staged"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/riskieee/improrpg.git"
  },
  "keywords": [
    "multiplayer",
    "live",
    "text",
    "role",
    "play",
    "game",
    "rpg",
    "adventure",
    "story",
    "notebook",
    "sideapp"
  ],
  "devDependencies": {
    "@babel/eslint-parser": "^7.14.3",
    "@babel/plugin-syntax-top-level-await": "^7.12.13",
    "babel-eslint": "^10.1.0",
    "connect-livereload": "^0.6.1",
    "eslint": "^7.27.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-vue": "^7.9.0",
    "lint-staged": "^11.0.0",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cloudmersive-image-api-client": "^1.3.5",
    "colors": "^1.4.0",
    "connect-mongo": "^4.4.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "^5.0.0-alpha.8",
    "express-session": "^1.17.2",
    "http-errors": "~1.6.3",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "mongoose": "^5.12.13",
    "mongoose-autopopulate": "^0.14.0",
    "morgan": "~1.9.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.1.0",
    "pug": "^3.0.2",
    "qrcode-terminal": "^0.12.0",
    "socket.io": "^4.1.2",
    "supertest": "^6.1.3"
  }
}
