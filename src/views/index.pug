extends layout

block content
  h1 Join a Story
  p We have great storys you should join!
  .album.py-5.bg-light
    .container
      if storys == undefined
        h1 No storys yet...  Please visit us later (ʘ‿ʘ)╯
      else
        each story in storys
          .col.row-cols-1
            .card.shadow-sm
              img.card-img-top(width='100%' height='225' src=`/img/${story.coverImg}` alt='cover' aria-label='cover' preserveaspectratio='xMidYMid slice' focusable='false')
              .card-body
                p.card-text
                  | STORYNAME  #{story.storyName}
                p.card-text
                  | DESCRIPTION: comming ... comming ...
                p.card-text
                  | #{story.participants}
                .d-flex.justify-content-between.align-items-center
                  .btn-group
                    button.btn.btn-sm.btn-outline-secondary(type='button') View
                    button.btn.btn-sm.btn-outline-secondary(type='button') Join
                  small.text-muted last active #{story.lastEdit}
