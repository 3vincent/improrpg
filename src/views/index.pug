extends layout

block content
  //- p #{storys}
  h1 Join a Story
  p We have great storys you should join!
  .album.py-2.bg-light
    .container
      if storys == undefined
        h1 No storys yet...  Please visit us later (ʘ‿ʘ)╯
      else
        each story in storys
          .row.row-cols-1.row-cols-sm-2.row-cols-md-3.g-3
            .col.col-sm-12.col-md-6.col-g-5
              .card.shadow-sm
                img.card-img-top.py-1(width='100%' height='225' src=`/img/${story.storyCover}` alt='cover' aria-label='cover' preserveaspectratio='xMidYMid slice' focusable='false')
                .card-body.pt-0
                  p.card-text.my-0
                    h2| #{story.storyName}
                  p.card-text
                    | DESCRIPTION: comming ...
                  p.card-text
                    | #{story.participants}
                  .d-flex.justify-content-between.align-items-center
                    .btn-group
                      button.btn.btn-sm.btn-outline-secondary(type='button') View
                      button.btn.btn-sm.btn-outline-secondary(type='button') Join
                    small.text-muted last active #{story.lastEdit}
